{
  "name": "exile-db",
  "version": "4.0.0",
  "description": "SQLite database containing static resources of the game Path of Exile (PoE)",
  "scripts": {
    "build": "tsc && ncp ./poedb.db dist/poedb.db",
    "test": "dotenv -e .env mocha",
    "test:ci": "mocha",
    "lint": "eslint src/ tests/",
    "prettier": "prettier --write \"**/*.ts\"",
    "semantic-release": "semantic-release",
    "rebuild-db": "ts-node scripts/buildDatabase.ts"
  },
  "keywords": [
    "Typescript",
    "Path of Exile",
    "poe",
    "db",
    "sqlite3",
    "kysely"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moepmoep12/exile-db.git"
  },
  "author": {
    "name": "Andreas Schmidt",
    "email": "moepmoep12@gmail.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/moepmoep12/exile-db/issues"
  },
  "homepage": "https://github.com/moepmoep12/exile-db#readme",
  "main": "./dist/index.js",
  "bin": "./dist/CLI.js",
  "exports": "./dist/index.js",
  "files": [
    "dist"
  ],
  "types": "./dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/changelog",
      "@semantic-release/release-notes-generator",
      "@semantic-release/npm",
      [
        "@semantic-release/git",
        {
          "message": "Release <%= nextRelease.version %> [skip ci]",
          "assets": [
            "package.json",
            "package-lock.json",
            "CHANGELOG.md"
          ]
        }
      ]
    ]
  },
  "devDependencies": {
    "@semantic-release/changelog": "^6.0.1",
    "@semantic-release/commit-analyzer": "^9.0.2",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/npm": "^9.0.1",
    "@semantic-release/release-notes-generator": "^10.0.3",
    "@types/better-sqlite3": "^7.6.2",
    "@types/chai": "^4.3.4",
    "@types/chai-as-promised": "^7.1.5",
    "@types/debug": "^4.1.7",
    "@types/mocha": "^10.0.0",
    "@types/yargs": "^17.0.13",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "axios": "^1.1.3",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "dotenv": "^16.0.3",
    "dotenv-cli": "^6.0.0",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "kysely-codegen": "^0.8.0",
    "mocha": "^10.1.0",
    "mocha-steps": "^1.3.0",
    "ncp": "^2.0.0",
    "pathofexile-dat-schema": "^3.0.0",
    "prettier": "^2.7.1",
    "semantic-release": "^19.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.8.4"
  },
  "dependencies": {
    "better-sqlite3": "^7.6.2",
    "debug": "^4.3.4",
    "kysely": "^0.22.0",
    "poe-dat-export": "^2.0.0",
    "yargs": "^17.6.2"
  }
}
